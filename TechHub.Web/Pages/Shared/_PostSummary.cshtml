@model PostSummaryDto

<article class="card mb-3 border-0">
    <div class="row g-0">
        <div class="col-md-4">
            <a href="./@Model.Slug">
                <img src="./@Model.ThumbnailPath" class="img-fluid rounded-start" alt="@Model.Title">
            </a>
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h5 class="card-title">
                    <a href="./@Model.Slug">
                        @Model.Title
                    </a>
                </h5>
                <p class="card-text">@Model.PreviewContent</p>
                <p class="card-text">
                    <span class="text-danger">تگ‌ها: </span>
                    @foreach (var tag in Model.Tags)
                    {
                        <a href="./tags/@tag.Slug">@tag.Name</a>
                        @if (tag != Model.Tags.Last())
                        {
                            <span>-</span>
                        }
                    }
                </p>
                <p class="card-text"><small class="text-muted">@Model.DatePublished</small></p>
            </div>
        </div>
    </div>
</article>